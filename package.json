{
  "name": "simple-student-crud",
  "version": "1.0.0",
  "description": "Simple CRUD with React Frontend and Node/Express Backend",
  "main": "server.js",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "node --watch server.js",
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:server\" \"npm run dev:client\"",
    "build": "tsc -b && vite build",
    "start": "npm run build && node server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lucide-react": "^0.555.0",
    "mysql2": "^3.9.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  }
}
